<UserControl x:Class="ClearUC.PickColorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClearUC"
             mc:Ignorable="d" Height="145" Width="285">
    <Grid>
        <local:ColorSlider x:Name="L" Margin="10,10,10,0" VerticalAlignment="Top" Height="30" Width="Auto" Lightness="126" LightnessChanged="L_LightnessChanged"/>
        <local:ColorSlider x:Name="S" Height="30" Width="Auto" FillGradient="Saturation" VerticalAlignment="Top" Lightness="126" Margin="10,80,10,0" SaturationChanged="S_SaturationChanged"/>
        <local:ColorSlider x:Name="H" Margin="10,45,10,0" Height="30" Width="Auto" FillGradient="Hue" VerticalAlignment="Top" Lightness="126" HueChanged="H_HueChanged"/>
        <local:Button x:Name="button" HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top" Height="20" Width="45" Content="5" FontFamily="Marlett" Click="button_Click"/>
    </Grid>
</UserControl>
