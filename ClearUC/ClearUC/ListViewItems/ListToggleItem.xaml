<local:ListItem
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClearUC.ListViewItems"
             xmlns:ClearUC="clr-namespace:ClearUC" x:Class="ClearUC.ListViewItems.ListToggleItem"
             mc:Ignorable="d" Height="50" Width="300">
    <Grid>
        <local:ListSubItem x:Name="ListSubItem" Height="Auto" Width="Auto" ItemClicked="ListSubItem_ItemClicked" />
        <ClearUC:ToggleButton x:Name="Toggle" Height="Auto" Margin="0,10,10,10" Width="45" HorizontalAlignment="Right" />
    </Grid>
</local:ListItem>