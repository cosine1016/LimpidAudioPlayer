             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClearUC.ListViewItems"
             mc:Ignorable="d" d:DesignWidth="300" Height="120">
    <Grid>
        <Rectangle x:Name="bg" Fill="#FF323232" Opacity="0.5" />
        <Image x:Name="image" Margin="0,10,10,10" ScrollViewer.VerticalScrollBarVisibility="Disabled" Width="100" StretchDirection="DownOnly" HorizontalAlignment="Right" d:LayoutOverrides="Width" />
        <Label x:Name="MainL" ScrollViewer.VerticalScrollBarVisibility="Disabled" FontWeight="Thin" Content="MainLabel" Margin="10,30,115,35" VerticalContentAlignment="Bottom" FontSize="24" Foreground="White" />
