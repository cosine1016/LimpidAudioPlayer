<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClearUC"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="ClearUC.NotificationBar"
             mc:Ignorable="d" d:DesignWidth="300" Height="40">
    <Grid x:Name="parent">
        <Rectangle x:Name="bg" Fill="#FFA23D3D" Stroke="#FF323232" Opacity="0.8" />
        <Label x:Name="label" Content="Message" VerticalContentAlignment="Center" Foreground="White" FontWeight="Thin" FontSize="16" />
        <Label x:Name="EnterLabel" Content="EnterLabel" HorizontalContentAlignment="Right" Foreground="#FFC8C8C8" VerticalContentAlignment="Bottom" FontSize="14.667" FontWeight="Thin" Visibility="Hidden" />
        <Rectangle x:Name="drain" Fill="White" StrokeThickness="0" Opacity="0.01" MouseEnter="drain_MouseEnter" MouseLeave="drain_MouseLeave" MouseDown="drain_MouseDown" MouseLeftButtonDown="drain_MouseLeftButtonDown" MouseLeftButtonUp="drain_MouseLeftButtonUp" />
    </Grid>
</UserControl>