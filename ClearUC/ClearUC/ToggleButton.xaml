<UserControl x:Class="ClearUC.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClearUC"
             mc:Ignorable="d" Height="50" Width="100">
    <Grid>
        <local:SeekBar x:Name="bar" ValueChanged="SeekBar_ValueChanged" MouseLeftButtonUp="bar_MouseLeftButtonUp" MouseLeftButtonDown="bar_MouseLeftButtonDown" MouseMove="bar_MouseMove" Maximum="1"/>
    </Grid>
</UserControl>