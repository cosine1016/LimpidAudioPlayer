<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LAP.UserControls"
             xmlns:ClearUC="clr-namespace:ClearUC;assembly=ClearUC" x:Class="LAP.UserControls.General"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ComboBox x:Name="LangC" Margin="10,36,10,0" VerticalAlignment="Top" Height="22"/>

        <ClearUC:Button x:Name="InstallLangB" Margin="10,63,0,0" Height="29" Width="121" Content="Install Language" Click="InstallLangB_Click" Grid.RowSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label x:Name="LangL" Content="Language" Margin="10,10,10,0" VerticalAlignment="Top" Foreground="White" FontWeight="Thin" Height="26"/>

    </Grid>
</UserControl>
