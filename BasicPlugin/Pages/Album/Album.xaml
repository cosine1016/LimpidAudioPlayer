<UserControl x:Class="BasicPlugin.Pages.Album.Album"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BasicPlugin.Pages.Album"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <Image x:Name="image"/>
        <Label x:Name="label" Content="Title" Background="#B2000000" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="18" FontWeight="Thin"/>
        <Rectangle x:Name="rect" Fill="Black" StrokeThickness="0" MouseEnter="Rectangle_MouseEnter" MouseLeave="Rectangle_MouseLeave" Opacity="0.1" MouseLeftButtonDown="rect_MouseLeftButtonDown" MouseLeftButtonUp="rect_MouseLeftButtonUp"/>

    </Grid>
</UserControl>
