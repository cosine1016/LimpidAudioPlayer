<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BasicPlugin.Pages.Album"
             xmlns:ClearUC="clr-namespace:ClearUC;assembly=ClearUC" x:Class="BasicPlugin.Pages.Album.View"
             mc:Ignorable="d" d:DesignHeight ="300" d:DesignWidth ="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="11*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="AlbumColumn"/>
            <ColumnDefinition x:Name="ListColumn"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <Grid x:Name="ItemGrid"/>
        </ScrollViewer>
        <ClearUC:ListView x:Name="TrackView" Grid.Column="1" ItemClicked="TrackView_ItemClicked" Grid.Row="1"/>
        <ClearUC:ExtendedLabel x:Name="AddLabel" Content="Add" HorizontalAlignment="Left" Width="Auto" MouseClick="AddLabel_MouseClick"/>
    </Grid>
</UserControl>
